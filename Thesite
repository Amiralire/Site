            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        h1 {
            color: #007bff;
            text-shadow: 2px 2px 5px black;
        }
        select, button {
            padding: 10px;
            margin: 10px;
            font-size: 16px;
            border-radius: 8px;
            border: none;
        }
        button {
            background-color: #0056b3;
            color: white;
            cursor: pointer;
            transition: 0.3s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }
        button:hover {
            background-color: #004080;
        }
        .output {
            background-color: rgba(0, 51, 102, 0.8);
            padding: 20px;
            margin-top: 20px;
            width: 80%;
            max-width: 500px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            color: white;
            text-align: left;
        }
        .save-btn {
            margin-top: 10px;
            padding: 10px;
            font-size: 16px;
            border-radius: 8px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            transition: 0.3s;
        }
        .save-btn:hover {
            background-color: #0056b3;
        }
